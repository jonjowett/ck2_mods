decisions = {
	expd_kf_create_taurica = {
		only_playable = yes
		is_high_prio = yes
		ai_check_interval = 60

		potential = {
			
			# Show the decision to everyone who has a province in the duchy of Cherson
			any_realm_province = { de_jure_liege_or_above = d_cherson }
			
			# Kingdom must not have already been formed
			k_taurica = { has_holder = no  }
			k_taurica = { is_titular = yes }
			
			# You must not own Crimea, or have Crimea as a vassal
			NOT = { k_crimea = { holder = ROOT } }
			NOT = { k_crimea = { holder_scope = { is_vassal_or_below_of = ROOT } } }
			
			# Copied from vanilla to handle various alternate start settings
			NOR = {
				has_alternate_start_setting = {
					setting = dejure
					option = random
				}
				has_alternate_start_setting = {
					setting = title_names
					option = random
				}
				has_alternate_start_setting = {
					setting = title_names
					option = random_including_duchies
				}
			}
		}

		allow = {
			# Copied from vanilla
			is_adult = yes
			independent = yes
			war = no
			NOT = { trait = incapable }
			
			# Replicate any unusual "potential" conditions in the allow block, so the player can see what they need to do to not invalidate the decision
			any_realm_province = { de_jure_liege_or_above = d_cherson }
			NOT = { k_crimea = { holder = ROOT } }
			NOT = { k_crimea = { holder_scope = { is_vassal_or_below_of = ROOT } } }
			
			# Must completely control the duchy of Cherson, but not have control of any substantial portion of the main kingdom 
			completely_controls = d_cherson
			NOR = {
				completely_controls = d_crimea
				completely_controls = d_wild_fields
			}
			
			# Players must have 1k prestige (because why not lol - see Cyprus)
			conditional_tooltip = {
				trigger = { ai = no }
				prestige = 1000
			}
			
			# See Cyprus
			wealth = 100
			
		}

		effect = {
			
			wealth = -100
			
			# Copy laws
			primary_title = {
				save_event_target_as = current_primary_title
			}
			k_taurica = {
				show_scope_change = no
				grant_title = ROOT
				copy_title_laws = event_target:current_primary_title
			}
			
			# The duchy becomes de jure part of the new kingdom
			d_cherson = {
				show_scope_change = no
				de_jure_liege = k_taurica
			}
			
			# If you're an emperor, the new kingdom becomes de jure part of your empire
			if = {
				limit = { primary_title = { tier = EMPEROR } }
				k_taurica = {
					show_scope_change = no
					de_jure_liege = event_target:current_primary_title
				}
			}
			
		}
	}
}